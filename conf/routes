# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index


GET         /users                   controllers.Application.getUsers()
GET         /users/new               controllers.Application.newUser()
POST        /users/save              controllers.Application.saveUser()
GET         /users/edit/:id          controllers.Application.editUser(id : Long)
GET         /users/delete/:id        controllers.Application.deleteUser(id : Long)


GET         /cars                  controllers.Application.getCars()
GET         /cars/new               controllers.Application.newCar()
POST        /cars/save              controllers.Application.saveCar()
GET         /cars/edit/:id          controllers.Application.editCar(id : Long)
GET         /cars/delete/:id        controllers.Application.deleteCar(id : Long)


GET         /orders                   controllers.Application.getOrders()
GET         /orders/new               controllers.Application.newOrder()
POST        /orders/save              controllers.Application.saveOrder()
GET         /orders/edit/:id          controllers.Application.editOrder(id : Long)
GET         /orders/delete/:id        controllers.Application.deleteOrder(id : Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)